Listen <%= @httpd_port %>
NameVirtualHost *:<%= @httpd_port %>
<VirtualHost *:<%= @httpd_port %>
  DocumentRoot /var/www/rhel7-test/
  ServerName <%= @fqdn %>
  <Directory "/var/www/rhel7-test/">
    Options All Indexes FollowSymLinks
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>
